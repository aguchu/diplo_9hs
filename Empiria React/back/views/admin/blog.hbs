<div class="container" style="margin-top:10px;">
    <div class="row">
        <p class="text-end"> Hola {{usuario}} <a class="btn btn-danger" href="/admin/login/logout">Cerrar Sesión <i
                    class="fas fa-sign-out-alt"></i></a></p>
    </div>

    <div class="row">
        <div class="col-7">
            <h5>Post de Blog</h5>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/blog/agregar" style="margin-bottom: 10px;"><i class="fa fa-plus"
                    aria-hidden="true"></i>Nuevo</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col">Imagen</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each blog}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <th>{{titulo}}</th>
                        <td>{{{imagen}}}</td>
                        <td class="text-end">
                            <a class="btn btn-secondary" href="/admin/blog/modificar/{{id}}"><i class="fa fa-pencil"
                                    aria-hidden="true"></i></a>
                            <a class="btn btn-secondary" href="/admin/blog/eliminar/{{id}}"><i class="fa fa-trash"
                                    aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>